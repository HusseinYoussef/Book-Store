@model IEnumerable<BookViewModel>
@{
    ViewBag.Title = "Library";
}

@if(Model.Count() > 0)
{
    <div class="container">
        <h3 class="display-4">My Library</h3>
        <div class="row" style="margin-top: 65px;">
            <partial name="_BooksCards"/>
        </div>
    </div>
}
else
{
    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <img src="~/images/no-library.png" alt="No Library picture" style="height: 50%;width: 50%;">
        </div>

        <div class="row h-100 justify-content-center align-items-center">
            <h3 class="display-4">Empty Library</h3>
        </div>

        <div class="row h-100 justify-content-center align-items-center">
            <p>
                It seems that you haven't added any books !!
            </p>
        </div>

        <div class="row h-100 justify-content-center align-items-center">
            <a class="btn btn-primary" style="margin-right: 15px;"
               asp-controller="Book" asp-action="AddBook">Add Book</a>
            <a class="btn btn-secondary" asp-controller="Book" asp-action="ShowBooks">Explore Books</a>
        </div>
    </div>
}