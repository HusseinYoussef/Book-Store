@model IEnumerable<BookViewModel>
@{
    ViewBag.Title = "Search Results";
}

@if(Model.Count() > 0)
{
    <div class="container">
        <h3 class="display-4">Results</h3>
        <div class="row" style="margin-top: 65px;">
            <partial name="_BooksCards"/>
        </div>
    </div>
}
else
{
    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <img src="~/images/no-results.jpg" alt="No Results Logo" style="height: 50%;width: 50%;">
        </div>  
        <div class="row h-100 justify-content-center align-items-center">
            <h3 class="display-4">No Results</h3>
        </div>
        <div class="row h-100 justify-content-center align-items-center">
            <p>
                No books found with @ViewBag.by <i>@ViewBag.searchQuery</i>
            </p>
        </div>
        <div class="row h-100 justify-content-center align-items-center">
            <a class="btn btn-primary" style="margin-right: 15px;"
               asp-controller="Home" asp-action="Index">Back to Home</a>
            <a class="btn btn-secondary" asp-controller="Book" asp-action="ShowBooks">Explore Books</a>
        </div>
    </div>
}